<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Mode Theme Configuration -->
    <style name="Theme.VideoPlayerPro" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Main Brand Colors -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/dark_primary</item>
        
        <!-- UI Colors for Dark Mode -->
        <item name="android:windowBackground">@color/dark_background</item> <!-- কালো -->
        
        <!-- Text Colors -->
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textColorPrimary">@color/dark_text</item>
        <item name="android:textColorSecondary">#B3FFEDE3</item> <!-- সেমি-ট্রান্সপারেন্ট সাদা -->
        
        <!-- Status Bar Configuration -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item> <!-- সাদা আইকন -->
        
        <!-- Custom Attributes Mapping -->
        <item name="cardBackgroundColor">@color/dark_surface</item> <!-- ডার্ক কার্ড -->
        <item name="iconTint">@color/dark_text</item>
        <item name="subtitleColor">#A3846B</item>
        <item name="rippleColor">#40FF6B40</item>
        
        <!-- Button Styles -->
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>
</resources>