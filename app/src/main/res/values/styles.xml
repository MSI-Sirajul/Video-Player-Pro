<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VideoPlayer" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primary_bg</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Theme.VideoPlayer.FullScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:keepScreenOn">true</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
    <!-- Popup Menu Styles -->
    <style name="PopupMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:paddingHorizontal">@dimen/_12sdp</item>
        <item name="android:paddingVertical">@dimen/_8sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="PopupMenuDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#1AFFFFFF</item>
        <item name="android:layout_marginVertical">@dimen/_2sdp</item>
    </style>
</resources>