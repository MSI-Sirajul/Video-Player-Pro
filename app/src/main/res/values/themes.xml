<resources>
    <!-- LIGHT THEME (Default) -->
    <style name="AppTheme.Light" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/light_bg</item>
        <item name="android:statusBarColor">@color/light_surface</item>
        <item name="android:navigationBarColor">@color/light_surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/light_text_primary</item>
    </style>

    <!-- DARK THEME -->
    <style name="AppTheme.Dark" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">@color/dark_bg</item>
        <item name="android:statusBarColor">@color/dark_surface</item>
        <item name="android:navigationBarColor">@color/dark_surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <!-- Player Activity is always Fullscreen Black -->
    <style name="AppTheme.Fullscreen" parent="android:Theme.Material.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>