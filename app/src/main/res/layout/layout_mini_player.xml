<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="#000000">

    <VideoView
        android:id="@+id/miniVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Mini Controls Overlay -->
    <FrameLayout
        android:id="@+id/miniControlsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        android:visibility="visible">

        <!-- Close Button (Top Left) -->
        <ImageButton
            android:id="@+id/btnCloseMini"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tint="#FFFFFF"
            android:layout_gravity="start|top"
            android:layout_margin="8dp"/>

        <!-- Video Title (Top Center) -->
        <TextView
            android:id="@+id/miniTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Title"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingHorizontal="40dp"/>

        <!-- Play/Pause (Center) -->
        <ImageButton
            android:id="@+id/btnMiniPlayPause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_pause_player"
            android:background="@drawable/bg_circle_white"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:tint="#000000"
            android:layout_gravity="center"/>

        <!-- Fullscreen Button (Bottom Right) -->
        <ImageButton
            android:id="@+id/btnMiniFullscreen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_scale"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:tint="#FFFFFF"
            android:layout_gravity="end|bottom"
            android:layout_margin="8dp"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>