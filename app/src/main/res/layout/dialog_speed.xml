<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_item_card"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Playback Speed"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="12dp"/>

    <TextView android:id="@+id/speed05" android:tag="0.5" style="@style/SpeedItem" android:text="0.5x"/>
    <TextView android:id="@+id/speed075" android:tag="0.75" style="@style/SpeedItem" android:text="0.75x"/>
    <TextView android:id="@+id/speed10" android:tag="1.0" style="@style/SpeedItem" android:text="1.0x (Normal)" android:textStyle="bold"/>
    <TextView android:id="@+id/speed125" android:tag="1.25" style="@style/SpeedItem" android:text="1.25x"/>
    <TextView android:id="@+id/speed15" android:tag="1.5" style="@style/SpeedItem" android:text="1.5x"/>
    <TextView android:id="@+id/speed20" android:tag="2.0" style="@style/SpeedItem" android:text="2.0x"/>

</LinearLayout>