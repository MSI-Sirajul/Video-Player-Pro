<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controller_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_top"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_back"
            android:tint="@color/white"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

        <!-- Title -->
        <TextView
            android:id="@+id/txt_video_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Video Title"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- TOP RIGHT ICONS (Xiaomi Style) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btn_volume_mute"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:src="@drawable/ic_volume"
                android:tint="@color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <ImageView
                android:id="@+id/btn_screenshot"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_screenshot"
                android:tint="@color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <ImageView
                android:id="@+id/btn_pip"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_pip"
                android:tint="@color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <ImageView
                android:id="@+id/btn_subtitle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_subtitles"
                android:tint="@color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <ImageView
                android:id="@+id/btn_bg_play"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_bg_play"
                android:tint="@color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
                
            <ImageView
                android:id="@+id/btn_aspect_ratio"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_aspect_ratio"
                android:tint="@color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <ImageView
                android:id="@+id/btn_more"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="5dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_more"
                android:tint="@color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless" />
        </LinearLayout>
    </LinearLayout>

    <!-- BOTTOM BAR CONTAINER -->
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_gradient_bottom"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- ROW 1: Seekbar & Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/txt_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekbar_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:progressTint="@color/dark_accent_neon"
                android:thumbTint="@color/white" />

            <TextView
                android:id="@+id/txt_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- ROW 2: Control Buttons (Lock | Transport | Speed/Rotate) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- LEFT: Lock & Favorite -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btn_lock"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_unlock"
                    android:tint="@color/white"
                    android:background="?android:attr/selectableItemBackgroundBorderless"/>

                <ImageView
                    android:id="@+id/btn_favorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/ic_heart_empty"
                    android:tint="@color/white"
                    android:background="?android:attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

            <!-- CENTER: Prev | Play | Next -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btn_prev"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_prev"
                    android:tint="@color/white"
                    android:background="?android:attr/selectableItemBackgroundBorderless"/>

                <!-- Reduced Play Icon Size (50dp) -->
                <ImageView
                    android:id="@+id/btn_play_pause"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_play"
                    android:tint="@color/white"
                    android:background="@drawable/bg_card_rounded"
                    android:backgroundTint="#33FFFFFF"/> 

                <ImageView
                    android:id="@+id/btn_next"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_next"
                    android:tint="@color/white"
                    android:background="?android:attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

            <!-- RIGHT: Speed & Rotate -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btn_speed"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_speed"
                    android:tint="@color/white"
                    android:background="?android:attr/selectableItemBackgroundBorderless"/>
                    
                <ImageView
                    android:id="@+id/btn_rotate"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/ic_rotate"
                    android:tint="@color/white"
                    android:background="?android:attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>