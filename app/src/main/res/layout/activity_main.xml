<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <!-- TOP SECTION: Title & Search -->
    <LinearLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:attr/windowBackground"
        android:elevation="4dp"
        android:paddingBottom="8dp">

        <!-- Title Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/app_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- View Type Toggle (List -> Card -> Grid) -->
            <ImageView
                android:id="@+id/btn_view_type"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="6dp"
                android:src="@drawable/ic_list_view"
                android:alpha="0.7"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Change View" />

            <!-- Three Dot Menu -->
            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:padding="4dp"
                android:src="@drawable/ic_more"
                android:alpha="0.7"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Menu" />
        </LinearLayout>

        <!-- Search Bar (Below Title) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_search_bar"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:alpha="0.5"
                android:tint="?android:attr/textColorSecondary"/>

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:hint="Search videos..."
                android:textColor="?android:attr/textColorPrimary"
                android:textColorHint="?android:attr/textColorSecondary"
                android:textSize="14sp"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionSearch"/>
        </LinearLayout>
    </LinearLayout>

    <!-- BOTTOM NAVIGATION BAR -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <!-- History Tab -->
        <FrameLayout
            android:id="@+id/tab_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_history"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_history"
                android:alpha="0.5"/>
        </FrameLayout>

        <!-- Videos Tab (Default Active) -->
        <FrameLayout
            android:id="@+id/tab_videos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_videos"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_fab_list"
                android:tint="?android:attr/textColorPrimary"/>
        </FrameLayout>

        <!-- Folder Tab -->
        <FrameLayout
            android:id="@+id/tab_folders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_folders"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_folder"
                android:alpha="0.5"/>
        </FrameLayout>

        <!-- Favorites Tab -->
        <FrameLayout
            android:id="@+id/tab_favorites"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_favorites"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_heart_empty"
                android:alpha="0.5"/>
        </FrameLayout>
    </LinearLayout>

    <!-- MAIN CONTENT (Grid/List) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_container"
        android:layout_above="@id/bottom_nav">

        <GridView
            android:id="@+id/videos_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false"
            android:numColumns="1" 
            android:horizontalSpacing="0dp"
            android:verticalSpacing="0dp"
            android:scrollbars="vertical"
            android:stretchMode="columnWidth" />

        <!-- Empty State -->
        <TextView
            android:id="@+id/txt_empty_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No videos found."
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone"/>
    </FrameLayout>

    <!-- Overlay Divider for Nav Bar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/bottom_nav"
        android:background="#1F000000"/>

</RelativeLayout>