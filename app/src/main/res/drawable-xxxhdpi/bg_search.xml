<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- সার্চ বারের ব্যাকগ্রাউন্ড কালার -->
    <!-- এটি আপনার colors.xml থেকে secondary_bg ব্যবহার করবে -->
    <solid android:color="@color/secondary_bg"/>

    <!-- রাউন্ড কর্নার (গোল করার জন্য) -->
    <corners android:radius="12dp"/>

    <!-- বর্ডার বা স্ট্রোক (অপশনাল) -->
    <stroke
        android:width="1dp"
        android:color="@color/divider"/>
        
    <!-- সার্চ বারের ভেতরের স্পেস -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp"/>
</shape>